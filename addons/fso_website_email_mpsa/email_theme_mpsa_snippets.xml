<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    
    <!-- THEME 'mpsa' SNIPPETS -->
    <!-- HINT: We simply use the default snippets from 'fso_website_email.theme_framework_snippets' -->
    <!-- HINT: These snippets will be loaded in the template 'email_theme_mpsa_assets_editmode' by java script -->
    <template id="email_theme_mpsa_snippets">
        <!-- Simply Load theme_default_snippets :) -->
        <t t-call="fso_website_email.theme_framework_snippets"/>
    </template>
    
    
    <!-- EXTEND fso_website_email.theme_framework_snippets for the 'mpsa' theme -->
    <template id="email_theme_mpsa_snippets_overrides" inherit_id="fso_website_email.theme_framework_snippets" name="Email Theme mpsa Snippet overrides">
        
        <!-- ==================== -->
        <!--  mpsa EXTRA SNIPPETS -->
        <!-- ==================== -->
        <xpath expr="//div[@id='snippet_email_special']" position="inside">
            
            <!-- .mpsa_bin Snippet -->
            <!-- ================= -->
            <div>
                <!-- Icon and name -->
                <div class="oe_snippet_thumbnail">
                    <img class="oe_snippet_thumbnail_img"
                         src="/fso_website_email_mpsa/static/src/icons/mpsa_bin.png"/>
                    <span class="oe_snippet_thumbnail_title">Container</span>
                </div>
                <!-- SNIPPET BLOCK -->
                <div class="oe_snippet_body ckediting_enabled mpsa_bin" contenteditable="true">
                </div>
            </div>
            
        </xpath>

        <!-- =========================== -->
        <!-- SNIPPET TARGETS AND OPTIONS -->
        <!-- =========================== -->
        
        <!-- .mpsa_bin Targets -->
        <xpath expr="//div[@id='snippet_options']" position="inside">
            <div data-snippet-option-id='mpsa_bin_target'
                 data-selector=".mpsa_bin"
                 data-selector-siblings="[data-oe-field='body_html'] > div"
                 data-selector-children="[data-oe-field='body_html']">
            </div>
            <div data-snippet-option-id='mpsa_bin_inside'
                 data-selector=".snippet_block"
                 data-selector-siblings=".mpsa_bin > div"
                 data-selector-children=".mpsa_bin">
            </div>
        </xpath>
        
        <!-- mpsa Foreground Styles -->
        <xpath expr="//div[@data-snippet-option-id='dadi_sb_fg_color']//ul" position="replace">
            <ul class="dropdown-menu">
                <li data-value=''><a>None</a></li>
                <li data-value='mpsa_sb_fg_grey'><a>Grau</a></li>
                <li data-value='mpsa_sb_fg_blue'><a>Blau</a></li>
                <li data-value='mpsa_sb_fg_yellow'><a>Gelb</a></li>
                <li data-value='mpsa_sb_fg_orange'><a>Orange</a></li>
                <li data-value='mpsa_sb_fg_background'><a>Hintergrund</a></li>
            </ul>
        </xpath>
        
        <!-- mpsa Background styles -->
        <xpath expr="//div[@data-snippet-option-id='dadi_sb_bg_color']//ul" position="replace">
            <ul class="dropdown-menu">
                <li data-value=''><a>None</a></li>
                <li data-value='mpsa_sb_bg_grey'><a>Grau</a></li>
                <li data-value='mpsa_sb_bg_blue'><a>Blau</a></li>
                <li data-value='mpsa_sb_bg_yellow'><a>Gelb</a></li>
                <li data-value='mpsa_sb_bg_orange'><a>Orange</a></li>
                <li data-value='mpsa_sb_bg_background'><a>Hintergrund</a></li>
            </ul>
        </xpath>
        
        <!-- .drop_in_button Extra Styles -->
        <xpath expr="//li[@data-value='dadi_di_button_default']" position="after">
            <li data-value='mpsa_di_button_grey'><a>Hellgrau</a></li>
            <li data-value='dadi_di_button_blue'><a>Blau</a></li>
            <li data-value='dadi_di_button_orange'><a>Orange</a></li>
            <li data-value='dadi_di_button_yellow'><a>Gelb</a></li>
        </xpath>
        
        <xpath expr="//div[@data-snippet-option-id='drop_in_button_width']" position="after">
            <div data-snippet-option-id='mpsa_snippet_block_padding'
                 data-selector=".snippet_block">
                <!-- Snippet options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Vertical Padding</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Normal</a></li>
                        <li data-value='mpsa_snippet_block_padding_none'><a>Remove Padding</a></li>
                        <li data-value='mpsa_snippet_block_padding_lower'><a>Lower</a></li>
                        <li data-value='mpsa_snippet_block_padding_smallbox'><a>Small Box</a></li>
                        <li data-value='mpsa_snippet_block_padding_largebox'><a>Large Box</a></li>
                    </ul>
                </li>
            </div>
        </xpath>

        <xpath expr="//div[@data-snippet-option-id='drop_in_button_width']" position="after">
            <div data-snippet-option-id='mpsa_snippet_block_img_padding_top'
                 data-selector=".flexibleContainer33left img.flexibleImage,
                                .flexibleContainer33middle img.flexibleImage,
                                .flexibleContainer33right img.flexibleImage">
                <!-- Snippet options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Vertical img Padding</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Normal</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_none'><a>Remove Padding</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_10'><a>10px</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_20'><a>20px</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_30'><a>30px</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_40'><a>40px</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_50'><a>50px</a></li>
                        <li data-value='mpsa_snippet_block_img_padding_top_60'><a>60px</a></li>
                    </ul>
                </li>
            </div>
        </xpath>

        <!-- .drop_in_button Extra Options -->
        <xpath expr="//div[@data-snippet-option-id='drop_in_button_width']" position="after">
            <!-- OPTION_GROUP: drop_in_button_mpsa_width -->
            <div data-snippet-option-id='drop_in_button_mpsa_width'
                 data-selector=".drop_in_button">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Width</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Normal</a></li>
                        <li data-value='mpsa_di_button_width_full'><a>Full</a></li>
                    </ul>
                </li>
            </div>
        </xpath>

        <!-- NEW: .snippet_block_bpbutton Extra Styles -->
        <xpath expr="//div[@data-snippet-option-id='snippet_block_bpbutton_style']//ul" position="inside">
            <li data-value='mpsa_bpbutton_style_blue'><a>Blau</a></li>
            <li data-value='mpsa_bpbutton_style_yellow'><a>Gelb</a></li>
            <li data-value='mpsa_bpbutton_style_orange'><a>Orange</a></li>
            <li data-value='bpbutton_style_grey'><a>Graue</a></li>

        </xpath>
        
        <!-- .snippet_block_banner Options -->
        <xpath expr="//div[@data-snippet-option-id='dadi_sb_bg_width']" position="after">
            <div data-snippet-option-id='mpsa_sb_banner_width'
                 data-selector=".snippet_block_banner">
                <!-- Snippet options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Banner Image Width</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Full Width</a></li>
                        <li data-value='mpsa_sb_banner_width_normal'><a>Normal</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
        
        <!-- .snippet_block_text_image_left, .snippet_block_text_image_right Options -->
        <xpath expr="//div[@data-snippet-option-id='drop_in_button_width']" position="after">
            <div data-snippet-option-id='mpsa_image_size'
                 data-selector=".snippet_block_text_image_left,
                                .snippet_block_text_image_right">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Bildgröße</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Default</a></li>
                        <li data-value='mpsa_large_image'><a>Large</a></li>
                        <li data-value='mpsa_medium_image'><a>Medium</a></li>
                        <li data-value='mpsa_small_image'><a>Small</a></li>
                        <li data-value='mpsa_tiny_image'><a>Tiny</a></li>
                    </ul>
                </li>
            </div>
            <div data-snippet-option-id='mpsa_twocol_style_left'
                 data-selector=".snippet_block_text_twocol">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">mpsa Styles</a>
                    <ul class="dropdown-menu">
                        <li data-value='mpsa_twocol_bg_left_blue'><a>LBGC Blau</a></li>
                        <li data-value='mpsa_twocol_bg_left_yellow'><a>LBGC Gelb</a></li>
                        <li data-value='mpsa_twocol_bg_left_orange'><a>LBGC Orange</a></li>
                        <li data-value='mpsa_twocol_textpadding_nopic_left'><a>Left padding</a></li>
                        <li data-value=''><a>Default</a></li>
                    </ul>
                </li>
            </div>
            <div data-snippet-option-id='mpsa_twocol_style_right'
                 data-selector=".snippet_block_text_twocol">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">mpsa Styles</a>
                    <ul class="dropdown-menu">
                        <li data-value='mpsa_twocol_bg_right_blue'><a>RBGC Blau</a></li>
                        <li data-value='mpsa_twocol_bg_right_yellow'><a>RBGC Gelb</a></li>
                        <li data-value='mpsa_twocol_bg_right_orange'><a>RBGC Orange</a></li>
                        <li data-value='mpsa_twocol_textpadding_nopic_right'><a>Right padding</a></li>
                        <li data-value=''><a>Default</a></li>
                    </ul>
                </li>
            </div>
            <div data-snippet-option-id='mpsa_image_styles'
                 data-selector=".snippet_block_text_image_left">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">mpsa special Styles</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Default</a></li>
                        <li data-value='mpsa_text_image_yellow_box'><a>Gelbe Box</a></li>
                        <li data-value='mpsa_text_image_mpsablue_box'><a>Blaue Box</a></li>
                    </ul>
                </li>
            </div>
            <div data-snippet-option-id='mpsa_image_height'
                 data-selector=".snippet_block_text_image_left">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Containerhöhe</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Default</a></li>
                        <li data-value='mpsa_image_height_100'><a>100px</a></li>
                        <li data-value='mpsa_image_height_150'><a>150px</a></li>
                        <li data-value='mpsa_image_height_200'><a>200px</a></li>
                        <li data-value='mpsa_image_height_250'><a>250px</a></li>
                        <li data-value='mpsa_image_height_300'><a>300px</a></li>
                        <li data-value='mpsa_image_height_400'><a>400px</a></li>
                    </ul>
                </li>
            </div>
            
            <div data-snippet-option-id='mpsa_image_valign'
                 data-selector=".snippet_block_text_image_left">
                <!-- drop_in options menu -->
                <li class="dropdown-submenu" data-required="true">
                    <a tabindex="-1" href="#">Vertikale Bildposition</a>
                    <ul class="dropdown-menu">
                        <li data-value=''><a>Normal</a></li>
                        <li data-value='mpsa_image_valign_middle'><a>Mittig</a></li>
                        <li data-value='mpsa_image_valign_bottom'><a>Unten</a></li>
                    </ul>
                </li>
            </div>
            
        </xpath>
        
        
    </template>

</data>
</openerp>
